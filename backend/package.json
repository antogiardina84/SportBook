{
  "name": "sportbook-backend",
  "version": "1.0.0",
  "description": "SportBook SAAS Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "babel src -d dist",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest --ci --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "security:audit": "npm audit",
    "docker:build": "docker build -t sportbook-api .",
    "docker:run": "docker run -p 5000:5000 sportbook-api"
  },
  "keywords": [
    "sports",
    "booking",
    "saas",
    "api",
    "tennis",
    "padel"
  ],
  "author": "SportBook Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "aws-sdk": "^2.1516.0",
    "stripe": "^14.9.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "dayjs": "^1.11.10",
    "uuid": "^9.0.1",
    "slugify": "^1.6.6",
    "qrcode": "^1.5.3",
    "pdf-lib": "^1.17.1",
    "ejs": "^3.1.9",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "xss": "^1.0.14",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "express-fileupload": "^1.4.3"
  },
  "devDependencies": {
    "prisma": "^5.7.1",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/cli": "^7.23.4",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
  "seed": "node prisma/seed.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}